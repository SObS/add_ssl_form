<?php
clearstatcache();
while (true){
    if(time() - (filemtime( './nginx') < 300)){
        // Не так просто угадать, как именно будет перезапускаться nginx
        // Так еще и от какого пользователя запущен...
        // Вообще такие скрипты удобнее писать на bash
        exec("nginx -s reload");
    };
}
